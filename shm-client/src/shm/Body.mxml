<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:welcom="shm.welcom.*"
		   xmlns:col="shm.circleoflife.*" xmlns:okd="shm.okdialy.*" xmlns:mbr="shm.member.*"
		   height="100%" width="100%" styleName="toumei" xmlns:shm="shm.*">
	
	<mx:VBox>

		<mx:ViewStack id="viewStack" width="550" height="450" resizeToContent="true">
		
			<welcom:Whatsthis id="whatsthis" label="What's this?" showEffect="{showSeq}" hideEffect="{hideSeq}"/>
			<col:ColPanel id="col" label="Circle of Life" showEffect="{showSeq}"
						  hideEffect="{hideSeq}"/>
			<okd:OkDialy id="okDialy" label="OK Dialy" showEffect="{showSeq}" hideEffect="{hideSeq}"/>
			<mbr:MemberEdit id="members" label="members" showEffect="{showSeq}"
							hideEffect="{hideSeq}"/>
		</mx:ViewStack>
	</mx:VBox>
	
	<mx:Script>
		<![CDATA[
			import mx.effects.easing.*;
		]]>
	</mx:Script>

	<mx:Sequence id="showSeq" duration="250">
		<mx:Parallel>
			<mx:Fade alphaFrom="0.0" alphaTo="1.0"/>
		</mx:Parallel>
	</mx:Sequence>

	<mx:Sequence id="hideSeq" duration="250">
		<mx:Glow alphaTo="0.0"/>
	</mx:Sequence>


</mx:Canvas>
