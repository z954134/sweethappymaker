<?xml version="1.0" encoding="utf-8"?>

<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/javaee">

	<context-param>
        <param-name>slim3.rootPackage</param-name>
        <param-value>shm</param-value>
    </context-param>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>application</param-value>
    </context-param>

    <filter>
        <filter-name>hotReloadingFilter</filter-name>
        <filter-class>org.slim3.controller.HotReloadingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>jdoFilter</filter-name>
        <filter-class>org.slim3.jdo.JDOFilter</filter-class>
    </filter>    
	<filter>
        <filter-name>frontController</filter-name>
        <filter-class>org.slim3.controller.FrontController</filter-class>
    </filter>
	<filter>
		<filter-name>loginCheckFilter</filter-name>
		<filter-class>shm.cool.filter.LoginCheckFilter
		</filter-class>
		<init-param>
			<param-name>loginUrl</param-name>
			<param-value>/login</param-value>
		</init-param>
		<init-param>
			<param-name>includes</param-name>
			<param-value>^/col/.*,^/member/.*,^/okdialy/.*</param-value>
		</init-param>
	</filter>
    <filter-mapping>
        <filter-name>hotReloadingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>    
    <filter-mapping>
        <filter-name>jdoFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>frontController</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
		<filter-mapping>
		<filter-name>loginCheckFilter</filter-name>
		<url-pattern>/col/*</url-pattern>
		<url-pattern>/member/*</url-pattern>
		<url-pattern>/okdialy/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	
	<jsp-config>
		<jsp-property-group>
			<el-ignored>false</el-ignored>
			<url-pattern>*.jsp</url-pattern>
			<el-ignored>false</el-ignored>
			<page-encoding>UTF-8</page-encoding>
			<scripting-invalid>false</scripting-invalid>
			<include-prelude>/WEB-INF/prelude.jsp</include-prelude>
			<trim-directive-whitespaces>true</trim-directive-whitespaces>
		</jsp-property-group>
	</jsp-config>
</web-app>
