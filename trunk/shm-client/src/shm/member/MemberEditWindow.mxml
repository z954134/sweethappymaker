<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:mbr="shm.member.*" title="記録の追加"
				showCloseButton="true">

	<mbr:MemberEditWindowCtrl id="ctrl"/>

	<mx:Form width="100%">
		<mx:FormHeading label="メンバーの詳細"/>
		<mx:FormItem label="メンバーID" required="true">
			<mx:TextInput id="memberIdField"/>
		</mx:FormItem>
		<mx:FormItem label="パスワード" required="true">
			<mx:TextInput id="passwordField"/>
		</mx:FormItem>
		<mx:FormItem label="Email" required="true">
			<mx:TextInput id="emailField"/>
		</mx:FormItem>
	</mx:Form>
	
	<mx:Array id="validators">
		<mx:Validator id="memberIdValidator" source="{memberIdField}" property="text"
					  requiredFieldError="ユーザIDを入力してください"/>
		<mx:Validator id="passwordValidator" source="{passwordField}" property="text"
					  requiredFieldError="パスワードを入力してください"/>
		<mx:EmailValidator id="emailVaidator" source="{emailField}" property="text"/>
	</mx:Array>

	<mx:ControlBar horizontalAlign="center">
		<mx:Button label="この記録を追加" id="executeButton"/>
		<mx:Button label="キャンセル" id="cancelButton"/>
	</mx:ControlBar>

	<mx:states>
		<mx:State name="Insert">
			<mx:SetProperty target="{this}" name="title" value="記録の追加"/>
			<mx:SetProperty target="{executeButton}" name="label" value="この記録を追加"/>
		</mx:State>
		<mx:State name="Update">
			<mx:SetProperty target="{this}" name="title" value="記録の訂正"/>
			<mx:SetProperty target="{executeButton}" name="label" value="この記録を訂正"/>
			<mx:SetProperty target="{memberIdField}" name="editable" value="false"/>
		</mx:State>
		<mx:State name="Delete">
			<mx:SetProperty target="{this}" name="title" value="記録の削除"/>
			<mx:SetProperty target="{executeButton}" name="label" value="この記録を削除"/>
			<mx:SetProperty target="{memberIdField}" name="enabled" value="false"/>
			<mx:SetProperty target="{emailField}" name="enabled" value="false"/>
			<mx:SetProperty target="{passwordField}" name="enabled" value="false"/>
		</mx:State>
	</mx:states>
</mx:TitleWindow>
